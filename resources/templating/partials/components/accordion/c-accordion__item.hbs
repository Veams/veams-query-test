{{! ---
 Accordion Item
 --- }}

{{#unless options.noWrapper}}
	<div class="accordion__item">
{{/unless}}
	<div class="accordion__header">
		<a href="#{{options.accItemId}}" class="accordion__btn" data-js-atom="accordion-btn">
			<span class="accordion__btn-inner">{{options.accButton}}</span>
		</a>
	</div>

	<div class="accordion__content" id="{{options.accItemId}}" data-js-atom="accordion-content">
		<div class="accordion__content-inner">
			{{{yield}}}
		</div>
	</div>
{{#unless options.noWrapper}}
	</div>
{{/unless}}